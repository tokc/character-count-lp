{
  "manifest_version": 2,

  "name": "Character Count LP",
  "description": "Count characters in selection only when selection is done.",
  "version": "1.0",

  "permissions": ["declarativeContent"],

  "page_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}